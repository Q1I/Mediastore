<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="media.definitions.Category" table="dbprak20.vKategorie">
  	<id name="id" column="Kategorie_ID">
      <generator class="native"/>
    </id>
    <property name="name" column="Name"/>
    
    <many-to-one name="parent" column="Oberkategorie_ID" class="media.definitions.Category" />
    
    <set name="children"  inverse="true" lazy="true" >
       <key>
          <column name="Oberkategorie_ID"/>
       </key>
      <one-to-many class="media.definitions.Category"/>
    </set>
	
    
  </class>

</hibernate-mapping>

